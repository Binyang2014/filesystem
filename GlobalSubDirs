# JOBS can be ser to "-j n" to do parallel makes in subdirectories
# use :: likes .PHONY
default::
	for dir in $(SUBDIRS); \
		do \
		(cd $${dir} && $(MAKE) $(JOBS)) || exit 1;\
		done

clean::
	for dir in $(SUBDIRS); \
		do \
		(cd $${dir} && $(MAKE) clean) || exit 1;\
		done

testbuild::
	for dir in $(SUBDIRS);\
		do \
		(cd $${dir} && $(MAKE) testbuild) || exit 1;\
		done

testclean::
	for dir in $(SUBDIRS);\
		do \
		(cd $${dir} && (MAKE) testclean) || exit 1;\
		done
